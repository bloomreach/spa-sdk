{
  "name": "@bloomreach/example-angular",
  "description": "Example Angular SPA for Bloomreach Experience",
  "version": "23.3.2",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "serve dist/browser -sn",
    "build": "ng build --configuration production",
    "dev": "ng serve",
    "lint": "ng lint",
    "dev:ssr": "ng run example-angular:serve",
    "start:ssr": "node dist/server/server.mjs",
    "prerender": "ng build",
    "prebuild:custom": "node pre-build.js",
    "yalcAdd": "yalc add @bloomreach/spa-sdk @bloomreach/ng-sdk",
    "yalcRetreat": "yalc retreat --all",
    "yalcRestore": "yalc restore --all"
  },
  "dependencies": {
    "@angular/animations": "17.3.5",
    "@angular/common": "17.3.5",
    "@angular/compiler": "17.3.5",
    "@angular/core": "17.3.5",
    "@angular/forms": "17.3.5",
    "@angular/platform-browser": "17.3.5",
    "@angular/platform-browser-dynamic": "17.3.5",
    "@angular/platform-server": "17.3.5",
    "@angular/router": "17.3.5",
    "@angular/ssr": "17.3.5",
    "@bloomreach/ng-sdk": "file:.yalc/@bloomreach/ng-sdk",
    "@bloomreach/spa-sdk": "file:.yalc/@bloomreach/spa-sdk",
    "dotenv": "16.4.5",
    "emittery": "0.7.2",
    "express": "4.19.2",
    "rxjs": "7.8.0",
    "sanitize-html": "2.10.0",
    "tslib": "2.3.0",
    "zone.js": "0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.3.7",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "17.3.5",
    "@angular/compiler-cli": "17.3.5",
    "@bloomreach/eslint-config-angular": "17.0.0",
    "@types/express": "4.17.21",
    "@types/jasmine": "5.1.0",
    "@types/node": "18.18.0",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "eslint": "8.57.0",
    "jasmine-core": "5.1.0",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "serve": "14.2.3",
    "typescript": "5.4.2",
    "yalc": "1.0.0-pre.53"
  },
  "eslintConfig": {
    "extends": [
      "@bloomreach/eslint-config-angular"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "project": [
        "tsconfig.json",
        "tsconfig.spec.json"
      ],
      "createDefaultProgram": true
    }
  }
}
