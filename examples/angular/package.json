{
  "name": "@bloomreach/example-angular",
  "description": "Example Angular SPA for Bloomreach Experience",
  "version": "18.0.1",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production && ng run example-angular:server:production",
    "dev": "ng serve",
    "test": "ng test  --pass-with-no-tests",
    "lint": "ng lint",
    "dev:ssr": "ng run example-angular:serve-ssr",
    "start:ssr": "node dist/server/main.js",
    "prerender": "ng run example-angular:prerender",
    "prebuild:custom": "node pre-build.js"
  },
  "dependencies": {
    "@angular/animations": "12.2.17",
    "@angular/common": "12.2.17",
    "@angular/compiler": "12.2.17",
    "@angular/core": "12.2.17",
    "@angular/forms": "12.2.17",
    "@angular/platform-browser": "12.2.17",
    "@angular/platform-browser-dynamic": "12.2.17",
    "@angular/platform-server": "12.2.17",
    "@angular/router": "12.2.17",
    "@bloomreach/ng-sdk": "18.0.1",
    "@bloomreach/segmentation": "0.0.13",
    "@bloomreach/spa-sdk": "18.0.1",
    "@nguniversal/express-engine": "12.1.3",
    "express": "4.17.1",
    "rxjs": "6.6.7",
    "tslib": "2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "12.1.2",
    "@angular-devkit/build-angular": "12.2.18",
    "@angular-eslint/builder": "12.7.0",
    "@angular/cli": "12.2.18",
    "@angular/compiler-cli": "12.2.17",
    "@angular/language-service": "12.2.17",
    "@bloomreach/eslint-config-angular": "12.1.4",
    "@nguniversal/builders": "12.1.3",
    "@types/cookie": "0.4.1",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.2",
    "dotenv": "16.0.3",
    "jest": "27.5.1",
    "jest-environment-jsdom": "27.5.1",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "@bloomreach/eslint-config-angular"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "project": [
        "tsconfig.json",
        "tsconfig.spec.json"
      ],
      "createDefaultProgram": true
    }
  }
}
