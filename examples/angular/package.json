{
  "name": "@bloomreach/example-angular",
  "description": "Example Angular SPA for Bloomreach Experience",
  "version": "15.5.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod && ng run example-angular:server:production",
    "test": "ng test  --passWithNoTests",
    "lint": "ng lint",
    "dev:ssr": "ng run example-angular:serve-ssr",
    "start:ssr": "node dist/server/main.js",
    "prerender": "ng run example-angular:prerender"
  },
  "dependencies": {
    "@angular/animations": "11.2.14",
    "@angular/common": "11.2.14",
    "@angular/compiler": "11.2.14",
    "@angular/core": "11.2.14",
    "@angular/forms": "11.2.14",
    "@angular/platform-browser": "11.2.14",
    "@angular/platform-browser-dynamic": "11.2.14",
    "@angular/platform-server": "11.2.14",
    "@angular/router": "11.2.14",
    "@bloomreach/ng-sdk": "15.5.0",
    "@bloomreach/segmentation": "0.0.13",
    "@bloomreach/spa-sdk": "15.5.0",
    "@nguniversal/express-engine": "11.2.1",
    "express": "4.17.1",
    "rxjs": "6.6.7",
    "tslib": "2.3.0",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "11.2.0",
    "@angular-devkit/build-angular": "0.1102.14",
    "@angular-eslint/builder": "4.3.0",
    "@angular/cli": "11.2.14",
    "@angular/compiler-cli": "11.2.14",
    "@angular/language-service": "11.2.14",
    "@bloomreach/eslint-config-angular": "1.0.1",
    "@nguniversal/builders": "11.2.1",
    "@types/cookie": "0.4.1",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "jest": "26.6.3",
    "ts-node": "10.1.0",
    "typescript": "4.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@bloomreach/eslint-config-angular"
    ],
    "parserOptions": {
      "project": [
        "tsconfig.json",
        "tsconfig.spec.json"
      ],
      "createDefaultProgram": true
    }
  }
}
