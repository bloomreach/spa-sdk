{
  "name": "@bloomreach/ng-sdk",
  "version": "23.1.0",
  "description": "Bloomreach SPA SDK for Angular",
  "keywords": [
    "bloomreach",
    "sdk",
    "angular"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
  "homepage": "https://www.bloomreach.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloomreach/spa-sdk",
    "directory": "packages/ng-sdk"
  },
  "bugs": {
    "url": "https://issues.onehippo.com/projects/SPASDK/issues"
  },
  "scripts": {
    "build": "ng build",
    "dev": "ng build --watch --configuration development",
    "lint": "ng lint",
    "ng": "ng",
    "prepack": "rm dist/package.json dist/README.md",
    "test": "ng test",
    "yalcAdd": "yalc add @bloomreach/spa-sdk",
    "yalcPush": "yalc push --replace --no-scripts",
    "yalcRetreat": "yalc retreat --all",
    "yalcRestore": "yalc restore --all"
  },
  "module": "dist/fesm2022/index.mjs",
  "esm2022": "dist/esm2022/index.mjs",
  "fesm2022": "dist/fesm2022/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "sideEffects": false,
  "dependencies": {
    "@bloomreach/spa-sdk": "file:.yalc/@bloomreach/spa-sdk",
    "tslib": "^2.3.0"
  },
  "peerDependencies": {
    "@angular/common": "^15.0.0 || ^16.0.0",
    "@angular/core": "^15.0.0 || ^16.0.0",
    "@angular/platform-browser": "^15.0.0 || ^16.0.0",
    "rxjs": "^6.5.3 || ^7.4.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "16.0.1",
    "@angular-devkit/architect": "0.1602.14",
    "@angular-devkit/build-angular": "16.2.14",
    "@angular-eslint/builder": "16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "16.2.14",
    "@angular/common": "16.2.12",
    "@angular/compiler": "16.2.12",
    "@angular/compiler-cli": "16.2.12",
    "@angular/core": "16.2.12",
    "@angular/language-service": "16.2.12",
    "@angular/platform-browser": "16.2.12",
    "@angular/platform-browser-dynamic": "16.2.12",
    "@bloomreach/eslint-config-angular": "16.0.0",
    "@types/jest": "28.1.8",
    "@types/node": "18.11.9",
    "eslint": "7.32.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-junit": "14.0.1",
    "jest-preset-angular": "13.1.6",
    "jest-util": "28.1.3",
    "ng-packagr": "16.2.3",
    "rxjs": "6.6.7",
    "typescript": "4.9.4",
    "yalc": "1.0.0-pre.53",
    "zone.js": "0.13.3"
  },
  "eslintConfig": {
    "extends": [
      "@bloomreach/eslint-config-angular"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "project": [
        "tsconfig.json",
        "tsconfig.spec.json"
      ],
      "createDefaultProgram": true
    }
  }
}