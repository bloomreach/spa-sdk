{
  "name": "@bloomreach/spa-sdk",
  "version": "14.2.0",
  "description": "Bloomreach SPA SDK",
  "keywords": [
    "bloomreach",
    "spa",
    "sdk"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://code.onehippo.org/cms-community/bloomreach-spa-sdk",
    "directory": "packages/spa-sdk"
  },
  "bugs": {
    "url": "https://issues.onehippo.com/projects/CMS/issues"
  },
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/index.es6.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "docs": "tsc --emitDeclarationOnly && dts-bundle-generator --out-file dist/spa-sdk.d.ts dist/index.d.ts && typedoc dist/spa-sdk.d.ts && minicat src/docs/typedoc.css >> docs/assets/css/main.css && rm dist/spa-sdk.d.ts",
    "lint": "tslint --project .",
    "prepare": "$npm_execpath run build",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".*\\.d\\.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/?(*.)spec.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7",
    "@babel/plugin-proposal-class-properties": "^7.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.7",
    "@babel/plugin-transform-object-assign": "^7.7",
    "@babel/polyfill": "^7.7",
    "@babel/preset-env": "^7.7",
    "@types/jest": "^24.0",
    "@types/xmldom": "^0.1",
    "babel-plugin-transform-async-to-promises": "^0.8",
    "dts-bundle-generator": "^3.3",
    "jest": "^24.9",
    "js-beautify": "^1.10",
    "minicat": "^1.0",
    "rollup": "^1.27",
    "rollup-plugin-babel": "^4.3",
    "rollup-plugin-terser": "^5.1",
    "rollup-plugin-typescript2": "^0.25",
    "ts-jest": "^24.2",
    "tslint": "^5.20",
    "tslint-config-airbnb": "^5.11",
    "typedoc": "^0.15",
    "typescript": "^3.7"
  },
  "dependencies": {
    "emittery": "^0.4",
    "xmldom": "^0.1"
  }
}
