{
  "name": "@bloomreach/spa-sdk",
  "version": "15.3.3",
  "description": "Bloomreach SPA SDK",
  "keywords": [
    "bloomreach",
    "spa",
    "sdk"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
  "homepage": "https://www.bloomreach.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloomreach/spa-sdk",
    "directory": "packages/spa-sdk"
  },
  "bugs": {
    "url": "https://issues.onehippo.com/projects/SPASDK/issues"
  },
  "main": "lib/index.js",
  "browser": "lib/index.js",
  "module": "lib/index.mjs",
  "es2015": "lib/index.es6.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "docs": "typedoc",
    "lint": "eslint --ext js,ts src",
    "prepare": "$npm_execpath run build",
    "test": "jest --coverage"
  },
  "eslintConfig": {
    "extends": "@bloomreach/eslint-config-base"
  },
  "jest": {
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "reflect-metadata"
    ],
    "testEnvironment": "jsdom"
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "TEST-spa-sdk.xml"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 edge version"
  ],
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "7.14.7",
    "@babel/plugin-transform-object-assign": "7.14.5",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.14.8",
    "@bloomreach/eslint-config-base": "1.0.1",
    "@rollup/plugin-babel": "5.3.0",
    "@types/cookie": "0.4.1",
    "@types/jest": "26.0.24",
    "@types/node": "14.17.3",
    "@types/sanitize-html": "2.3.2",
    "@types/xmldom": "0.1.31",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "eslint": "7.32.0",
    "jest": "26.6.3",
    "jest-junit": "12.2.0",
    "js-beautify": "1.14.0",
    "rollup": "2.55.0",
    "rollup-plugin-dts": "3.0.2",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "ts-jest": "26.5.6",
    "typedoc": "0.19.2",
    "typedoc-plugin-external-module-map": "1.2.1",
    "typescript": "4.1.6"
  },
  "dependencies": {
    "@xmldom/xmldom": "0.7.2",
    "cookie": "0.4.1",
    "emittery": "0.7.2",
    "inversify": "5.1.1",
    "reflect-metadata": "0.1.13",
    "sanitize-html": "2.4.0"
  }
}
