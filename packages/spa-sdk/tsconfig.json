{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declarationDir": "./dist",
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "includeDeclarations": true,
    "mode": "file",
    "out": "docs",
    "readme": "src/docs/index.md"
  }
}
