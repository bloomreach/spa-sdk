{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "exclude": "!**/+(api|index).ts",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "mode": "file",
    "out": "docs",
    "readme": "src/docs/index.md"
  },
  "types": [
    "jest"
  ]
}
