{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "**/*.ts"
  ],
  "typedocOptions": {
    "exclude": "!**/+(api|index).ts",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "mode": "file",
    "out": "docs",
    "readme": "src/docs/index.md"
  },
  "types": [
    "jest"
  ]
}
