{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "useDefineForClassFields": false,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "disableSources": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "exclude": "!lib/**/*",
    "external-modulemap": [".*\/lib\/([\\w\\-_]+)", ".*\/lib\/([\\w\\-_]+)\/"],
    "hideGenerator": true,
    "includeVersion": true,
    "entryPoints": ["lib/index.d.ts", "lib/express/index.d.ts"],

    "out": "docs"
  }
}
