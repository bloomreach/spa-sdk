{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es6",
    "target": "es6"
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "includeDeclarations": true,
    "mode": "file",
    "out": "docs",
    "readme": "src/docs/index.md"
  }
}
