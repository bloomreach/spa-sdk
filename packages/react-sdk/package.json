{
  "name": "@bloomreach/react-sdk",
  "version": "15.0.1-0",
  "description": "Bloomreach SPA SDK for React",
  "keywords": [
    "bloomreach",
    "sdk",
    "react"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
  "homepage": "https://www.bloomreach.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloomreach/spa-sdk",
    "directory": "packages/react-sdk"
  },
  "bugs": {
    "url": "https://issues.onehippo.com/projects/SPASDK/issues"
  },
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/index.es6.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "lint": "eslint --ext js,ts,tsx src",
    "prepare": "$npm_execpath run build",
    "test": "jest --coverage"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 edge version"
  ],
  "dependencies": {
    "@bloomreach/spa-sdk": "15.0.1-0"
  },
  "peerDependencies": {
    "react": "^16.14"
  },
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/plugin-proposal-object-rest-spread": "7.14.7",
    "@babel/preset-env": "7.14.8",
    "@babel/preset-react": "7.14.5",
    "@bloomreach/eslint-config-react": "1.0.2",
    "@rollup/plugin-babel": "5.3.0",
    "@types/enzyme": "3.10.9",
    "@types/jest": "26.0.24",
    "@types/react": "16.14.0",
    "@types/react-dom": "16.9.14",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "eslint": "7.32.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "jest": "26.6.3",
    "jest-enzyme": "7.1.2",
    "jest-junit": "12.2.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "rollup": "2.55.0",
    "rollup-plugin-dts": "3.0.2",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "ts-jest": "26.5.6",
    "typescript": "4.1.6"
  },
  "eslintConfig": {
    "extends": "@bloomreach/eslint-config-react",
    "overrides": [
      {
        "files": "*.spec.tsx",
        "rules": {
          "react/jsx-props-no-spreading": "off",
          "jsx-a11y/anchor-has-content": "off",
          "jsx-a11y/anchor-is-valid": "off",
          "@typescript-eslint/ban-ts-comment": "off",
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "./setupTests"
    ],
    "testEnvironment": "enzyme"
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "TEST-react-sdk.xml"
  },
  "stableVersion": "15.0.0"
}
