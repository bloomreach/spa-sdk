{
  "name": "@bloomreach/react-sdk",
  "version": "17.1.0",
  "description": "Bloomreach SPA SDK for React",
  "keywords": [
    "bloomreach",
    "sdk",
    "react"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
  "homepage": "https://www.bloomreach.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloomreach/spa-sdk",
    "directory": "packages/react-sdk"
  },
  "bugs": {
    "url": "https://issues.onehippo.com/projects/SPASDK/issues"
  },
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/index.es6.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "dev": "npm run build -- --watch",
    "lint": "eslint --ext js,ts,tsx src",
    "prepack": "$npm_execpath run build",
    "test": "jest --coverage"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 edge version"
  ],
  "dependencies": {
    "@bloomreach/spa-sdk": "17.1.0"
  },
  "peerDependencies": {
    "react": "^16.14 || ^17.0 || ^18.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/plugin-proposal-object-rest-spread": "7.14.7",
    "@babel/preset-env": "7.14.8",
    "@babel/preset-react": "7.14.5",
    "@bloomreach/eslint-config-react": "1.0.2",
    "@rollup/plugin-babel": "5.3.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.2.0",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "eslint": "7.32.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "jest": "29.2.2",
    "jest-environment-jsdom": "29.2.2",
    "jest-junit": "12.2.0",
    "rollup": "2.55.0",
    "rollup-plugin-dts": "3.0.2",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "ts-jest": "29.0.3",
    "typescript": "4.3.5"
  },
  "eslintConfig": {
    "extends": "@bloomreach/eslint-config-react",
    "rules": {
      "react/require-default-props": "off",
      "react/static-property-placement": "off"
    },
    "overrides": [
      {
        "files": "*.spec.tsx",
        "rules": {
          "react/jsx-props-no-spreading": "off",
          "jsx-a11y/anchor-has-content": "off",
          "jsx-a11y/anchor-is-valid": "off",
          "@typescript-eslint/ban-ts-comment": "off",
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ]
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "TEST-react-sdk.xml"
  }
}
