{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "jest"
  ],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "exclude": "!**/+(api|index).ts",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "mode": "file",
    "out": "docs",
    "readme": "src/docs/index.md"
  }
}
