{
  "name": "@bloomreach/spa-sdk",
  "version": "0.0.0",
  "description": "Bloomreach SPA SDK",
  "keywords": [
    "bloomreach",
    "spa",
    "sdk"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://code.onehippo.org/cms-community/bloomreach-spa-sdk"
  },
  "browser": "dist/spa-sdk.js",
  "module": "dist/spa-sdk.mjs",
  "es2015": "dist/spa-sdk.es6.mjs",
  "types": "dist/spa-sdk.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "lint": "tslint --project .",
    "test": "jest",
    "docs": "typedoc && minicat src/docs/typedoc.css >> docs/assets/css/main.css"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/?(*.)spec.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0",
    "@babel/plugin-proposal-class-properties": "^7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0",
    "@babel/plugin-transform-object-assign": "^7.0",
    "@babel/polyfill": "^7.0",
    "@babel/preset-env": "^7.0",
    "@types/jest": "^24.0",
    "@types/node": "^11.0",
    "babel-loader": "^8.0",
    "babel-plugin-transform-async-to-promises": "^0.8",
    "jest": "^24.0",
    "js-beautify": "^1.0",
    "minicat": "^1.0",
    "rollup": "^1.7",
    "rollup-plugin-babel": "^4.3",
    "rollup-plugin-dts": "^0.15.1",
    "rollup-plugin-terser": "^4.0",
    "rollup-plugin-typescript2": "^0.20",
    "ts-jest": "^24.0",
    "ts-loader": "^5.0",
    "tslint": "^5.0",
    "tslint-config-airbnb": "^5.0",
    "tslint-loader": "^3.5",
    "typedoc": "^0.15.0",
    "typescript": "^3.4"
  }
}
