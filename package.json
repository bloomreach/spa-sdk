{
  "private": true,
  "workspaces": [
    "packages/spa-sdk",
    "packages/react-sdk",
    "examples/*"
  ],
  "description": "Bloomreach SPA SDK",
  "keywords": [
    "bloomreach",
    "spa",
    "sdk"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
