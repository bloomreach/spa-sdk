    "@babel/preset-env": "^7.6",
    "@types/jest": "^24.0",
    "@types/node": "^12.0",
    "@types/react": "^16.9",
    "@types/react-dom": "^16.9",
    "@types/react-router-dom": "^4.3.5",
    "babel-loader": "^8.0",
    "babel-plugin-transform-async-to-promises": "^0.8",
    "del-cli": "^3.0.0",
    "jest": "^24.0",
